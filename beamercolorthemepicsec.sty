\definecolor{picsec@bgyellow}{rgb}{0.95,0.95,0.85}
\definecolor{picsec@bggray}{rgb}{0.9,0.9,0.9}

%\definecolor{picsec@fgblue}{rgb}{0.2, 0.3, 0.5}
\definecolor{picsec@bgblue}{rgb}{0.92, 0.93, 0.95}

\definecolor{picsec@darkbgblue}{rgb}{0.01,0.05,0.15}
\definecolor{picsec@darkfgblue}{rgb}{0.25,0.45,0.5}

\mode<presentation>

\setbeamercolor{palette primary}{fg=picsec@fgblue,bg=white}
\setbeamercolor{palette secundary}{fg=white!90!picsec@fgblue,bg=picsec@fgblue}
\setbeamercolor{palette tertiary}{fg=picsec@fgblue,bg=picsec@bgblue}
\setbeamercolor{palette quaternary}{fg=picsec@fgblue,bg=picsec@bgblue}

\setbeamercolor{structure}{fg=picsec@fgblue,bg=white}

\setbeamercolor{background canvas}{parent=palette primary}

\setbeamercolor{section in head/foot}{parent=palette primary}
\setbeamercolor{frametitle}{bg=white,fg=picsec@fgblue}

\setbeamercolor{alerted text}{fg=black!30!red,bg=bg}
\setbeamercolor{example text}{fg=black!30!green,bg=bg}

\setbeamercolor{block title}{use=structure,fg=structure.fg,bg=picsec@bggray}
\setbeamercolor{block title alerted}{fg=alerted text.fg,bg=alerted text.fg!10!bg}
\setbeamercolor{block title example}{fg=example text.fg,bg=example text.fg!10!bg}

\setbeamercolor{block body}{fg=black,bg=picsec@bggray}
\setbeamercolor{block body alerted}{fg=normal text.fg,bg=alerted text.fg!10!bg}
\setbeamercolor{block body example}{fg=normal text.fg,bg=example text.fg!10!bg}

\setbeamercolor{title}{fg=picsec@fgblue,bg=white}
\setbeamercolor{subtitle}{parent=title}

\mode
<all>

\makeatother