\RequirePackage{xcolor}

% Default color definitions, change them in the template
\definecolor{picsec@fgmain}{rgb}{0.2,0.3,0.5} % Theme color
\definecolor{picsec@bgmain}{named}{white} % Background color of slides

\mode<presentation>

\setbeamercolor{palette primary}{fg=picsec@fgmain,bg=white}
\setbeamercolor{palette secundary}{fg=white!90!picsec@fgmain,bg=picsec@bgmain}
\setbeamercolor{palette tertiary}{fg=picsec@fgmain,bg=picsec@bgmain}
\setbeamercolor{palette quaternary}{fg=picsec@fgmain,bg=picsec@bgmain}

\setbeamercolor{structure}{fg=picsec@fgmain,bg=white}

\setbeamercolor{background canvas}{parent=palette secundary}

\setbeamercolor{section in head/foot}{parent=palette primary}
\setbeamercolor{frametitle}{bg=white,fg=picsec@fgmain}

\setbeamercolor{alerted text}{fg=black!30!red,bg=bg}
\setbeamercolor{example text}{fg=black!30!green,bg=bg}

\setbeamercolor{block title}{use=structure,fg=structure.fg,bg=picsec@fgmain!10!white}
\setbeamercolor{block title alerted}{fg=alerted text.fg,bg=alerted text.fg!10!bg}
\setbeamercolor{block title example}{fg=example text.fg,bg=example text.fg!10!bg}

\setbeamercolor{block body}{fg=black,bg=picsec@fgmain!10!white}
\setbeamercolor{block body alerted}{fg=normal text.fg,bg=alerted text.fg!10!bg}
\setbeamercolor{block body example}{fg=normal text.fg,bg=example text.fg!10!bg}

\setbeamercolor{title}{fg=picsec@fgmain,bg=white}
\setbeamercolor{subtitle}{parent=title}

\mode
<all>

\makeatother